@page "/staffs"
@layout MainLayout
@inherits Intranet.Pages.StaffsComponent

@using Radzen
@using Radzen.Blazor
@using Intranet.Models.Kkk
<PageTitle>Staffs</PageTitle>
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Staffs">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenSplitButton Icon="get_app" style="margin-bottom: 10px; margin-left: 10px" Text="Export" Click="@Splitbutton0Click">
          <ChildContent>
            <RadzenSplitButtonItem Text="Excel" Value="xlsx">
            </RadzenSplitButtonItem>
            <RadzenSplitButtonItem Text="CSV" Value="csv">
            </RadzenSplitButtonItem>
          </ChildContent>
        </RadzenSplitButton>
        <RadzenTextBox Placeholder="Search ..." style="display: block; 
margin-bottom: 10px; width: 100%" Name="Textbox0" 
        @oninput="@(async(args) => {search = $"{args.Value}";await grid0.GoToPage(0);await Load();})">
        </RadzenTextBox>
        <RadzenDataGrid @ref="grid0" AllowFiltering="false" AllowPaging="true" PageSize="6"  
        AllowSorting="true" FilterMode="FilterMode.SimpleWithMenu" Data="@getStaffsResult" ShowPagingSummary="true"
        TItem="Intranet.Models.Kkk.Staff" RowDoubleClick="@Grid0RowDoubleClick" AllowColumnPicking="true">
          <Columns>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="StaffId" Title="Staff Id" Visible="false">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="UnitCode" Title="Unit Code" Visible="false">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="Country" Title="Country" Visible="false">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="Surname" Title="Surname">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="FirstName" Title="First Name">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="MiddleName" Title="Middle Name" Visible="false">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="Email" Title="Email">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" FormatString="{0:MM/dd/yyyy}" Property="DateBirth" Title="Date Birth">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" FormatString="{0:MM/dd/yyyy}" Property="CurrentYear" Title="Current Year" Visible="false">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="Age" Title="Age" Visible="false">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="JobGrade" Title="Job Grade">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="GradeClassification" Title="Grade Classification">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="JobRole" Title="Job Role" Visible="false">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="SalesNonSales" Title="Sales Non Sales" Visible="false">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="Department" Title="Department">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="LocationBranch" Title="Location Branch">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="CountryWork" Title="Country Work" Visible="false">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="CountryOrigin" Title="Country Origin" Visible="false">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="EmploymentDate" Title="Employment Date">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" FormatString="{0:MM/dd/yyyy}" Property="DateLastPromotion" Title="Last Promotion">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="LengthStay" Title="Length Stay" Visible="false">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="SolId" Title="Sol Id" Visible="false">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="Mobile1" Title="Mobile 1">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="Mobile2" Title="Mobile 2" Visible="false">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Property="Extension" Title="Extension">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" FormatString="{0:MM/dd/yyyy}" Property="StartDate" Title="Start Date" Visible="false">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Intranet.Models.Kkk.Staff" Filterable="false" Sortable="false" TextAlign="TextAlign.Center" Width="70px">
              <Template Context="intranetModelsKkkStaff">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, intranetModelsKkkStaff))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenDataGridColumn>
          </Columns>
        </RadzenDataGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
